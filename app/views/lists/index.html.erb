<div class="container mt-4">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Movie Lists</h1>

    <%= link_to new_list_path, class: "btn btn-dark" do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: 'text-white text-decoration-none' do %>
        <div class="card-category"
             style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
             url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://happiclap.com/wp-content/uploads/2019/06/Everyday-Clapboard-1.jpg' %>)">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
