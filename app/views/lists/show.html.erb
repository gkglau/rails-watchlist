<div class="container mt-5">

  <div class="d-flex justify-content-between align-items-center mb-4">

    <!-- Esquerda -->
    <%= link_to lists_path, class: "btn btn-dark" do %>
      <i class="fa-solid fa-house"></i>
    <% end %>

    <!-- Centro -->
    <h1 class="mb-0"><%= @list.name %></h1>

    <!-- Direita -->
    <%= link_to new_list_bookmark_path(@list), class: "btn btn-dark" do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>

  </div>

  <div class="cards mb-5">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card" style="width: 18rem;">
        <%= image_tag bookmark.movie.poster_url, alt: "text" %>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
        </div>
      </div>
    <% end %>
  </div>
<%= link_to "Delete",
            list_path(@list),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "btn btn-dark" %>
</div>
